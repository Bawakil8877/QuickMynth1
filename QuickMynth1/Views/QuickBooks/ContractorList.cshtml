@model dynamic
@{
    ViewData["Title"] = "Contractor List";
}

<h2>Contractors from QuickBooks</h2>

<nav class="mb-3">
    <a asp-action="EmployeeList"
       asp-controller="QuickBooks"
       class="btn btn-sm btn-outline-secondary">
        View Employees
    </a>
    <a asp-action="ContractorList"
       asp-controller="QuickBooks"
       class="btn btn-sm btn-outline-primary">
        View Contractors
    </a>
</nav>

@if (Model != null && Model.Count > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Display Name</th>
                <th>Primary Email</th>
                <th>Active</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var v in Model)
            {
                <tr>
                    <td>@v.DisplayName</td>
                    <td>@v.PrimaryEmailAddr?.Address</td>
                    <td>@v.Active</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No contractors found.</p>
}
